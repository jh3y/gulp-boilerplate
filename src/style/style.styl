@import 'base.styl'

colorPalette = {
  red   : #E74C3C
  blue  : blue
  green : #2ECC71
  purple: #8E44AD
  lilac : #AC92CE
  white : #FFFFFF
}

for key, value in colorPalette
  .bg--{key}
    background-color value
  .tx--{key}
    color value

remify(size)
  val = size / (size * 0 + 1)
  ((val) / 16)rem

font-size(size)
  font-size size
  val = size / (size * 0 + 1)
  font-size ((val) / 16)rem

.tx--center
  text-align center